<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/card_margin"
                                    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_background"
            android:gravity="center"
            android:text="@string/title_summary"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <!-- Description -->
            <TableRow android:id="@+id/tvJourneySummaryDescriptionRow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryDescriptionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/title_description"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Description"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>

            <!-- Location From -->
            <TableRow>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryLocationFromTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/title_location_from"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryLocationFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Paseo 8 de Marzo, Alcobendas, Madrid, España"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>

            <!-- Location To -->
            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryLocationToTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/title_location_to"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryLocationTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Paseo 8 de Marzo, Alcobendas, Madrid, España"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>

            <View style="@style/SeparatorViewStyle"/>

            <!-- Start date and start time -->
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryStartDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/title_start_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="12/12/2012"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryStartTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/title_start_time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="15:35:20"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>


            <!-- End date and end time -->
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryEndDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="@string/title_end_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="12/12/2012"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryEndTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="@string/title_end_time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>


                    <TextView
                        android:id="@+id/tvJourneySummaryEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="15:35:20"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>

            <View style="@style/SeparatorViewStyle"/>

            <!-- Total distance and total time -->
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryTotalDistanceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="@string/title_total_distance"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryTotalDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="200,4 Km"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryTotalTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="@string/title_total_time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="15:35:20"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>

            <!-- Max speed and Medium speed -->
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryMaxSpeedTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="@string/title_max_speed"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryMaxSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="200,4 Km"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvJourneySummaryMediumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="@string/title_medium_speed"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/default_background_dark"/>

                    <TextView
                        android:id="@+id/tvJourneySummaryMediumSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="15:35:20"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>