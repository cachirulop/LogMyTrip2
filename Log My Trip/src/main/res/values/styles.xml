<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/default_background</item>
        <item name="colorPrimaryDark">@color/default_background_dark</item>

        <item name="colorAccent">@color/default_background</item>
    </style>

    <!-- ActionBar styles -->
    <style name="LogMyTripActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/default_background</item>
        <item name="backgroundStacked">@color/default_background</item>
        <item name="backgroundSplit">@color/default_background</item>
    </style>


    <style name="SeparatorViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/default_background</item>
    </style>
</resources>
